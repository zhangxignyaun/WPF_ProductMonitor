<UserControl
    x:Class="ProductMonitor.UserControls.RadarUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProductMonitor.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid x:Name="mainGrid">
        <Canvas x:Name="mainCanvas" />
        <!--  规则多边形  -->
        <Polygon
            x:Name="P1"
            Stroke="#22ffffff"
            StrokeThickness="1" />
        <Polygon
            x:Name="P2"
            Stroke="#22ffffff"
            StrokeThickness="1" />
        <Polygon
            x:Name="P3"
            Stroke="#22ffffff"
            StrokeThickness="1" />
        <Polygon
            x:Name="P4"
            Stroke="#22ffffff"
            StrokeThickness="1" />

        <!--  数据多边形  -->
        <Polygon
            x:Name="P5"
            Fill="#666ef0f5"
            Stroke="#95d4e4"
            StrokeThickness="2" />
    </Grid>
</UserControl>
