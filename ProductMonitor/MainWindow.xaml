<Window x:Class="ProductMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductMonitor"
        FontFamily="微软雅黑"
        
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="生产监控平台" Height="750" Width="1200">
    <WindowChrome.WindowChrome>
        <!--隐藏WPF自带头部-->
            <WindowChrome GlassFrameThickness="0"></WindowChrome>
    </WindowChrome.WindowChrome>
    <Grid>

        <Grid.Background>
            <!--背景色有里向外渐变,LinearGradientBrush 由左向右-->
            
            <RadialGradientBrush>
                <GradientStop Color="#ff285173" Offset="0"></GradientStop>
                <GradientStop Color="#ff244967" Offset="0.5"></GradientStop>
                <GradientStop Color="#ff14273a" Offset="1"></GradientStop>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="68*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <!--第一行：头部-->
        <Border BorderThickness="0,0,0,1" BorderBrush="Gray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition ></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Source="/Resource/Images/Logo.jpg" Margin="5"/>
                <!--第二列-->
                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" >
                    <TextBlock Text="生产监控平台" Foreground="White" FontSize="15" Margin="3,0,0,0"/>
                    <TextBlock x:Name="VisualBrush1" Text="我来看看怎么个事" Foreground="White" FontSize="13" Margin="0,4"/>
                </StackPanel>
                
                <!--第三列-->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right" Background="Transparent" WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button Content="—" Style="{StaticResource operateBtnStyle}" Click="Btn_Min"/>
                        <Button Content="☐"  Style="{StaticResource operateBtnStyle}" Click="Btn_Max"/>
                        <Button Content="✕"  Style="{StaticResource operateBtnStyle}" Click="Btn_Close" Background="DarkRed"/>
                    </StackPanel>


                    <Border BorderThickness="0,1,0,0" Grid.Row="1" BorderBrush="Gray" Margin="10,0,0,0">
                        <Border.Background>
                            <VisualBrush TileMode="FlipXY" Viewport="10,10,10,10" ViewportUnits="Absolute">
                                <VisualBrush.Visual>
                                    <Line X1="0" Y1="10" X2="10" Y2="20" Stroke="Gray" StrokeThickness="1"/>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Border.Background>
                    </Border>
                </Grid>
            </Grid>
        </Border>
        
        <!--第二行：内容展示-->

        <ContentControl Grid.Row="1" Content="{Binding MonitorUC}"></ContentControl>
        <!--第三行：底部-->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <!---->
                <Border BorderThickness="0,1,0,0"  BorderBrush="Gray" >
                    <Border.Background>
                        <VisualBrush TileMode="FlipXY" Viewport="10,10,10,10" ViewportUnits="Absolute">
                            <VisualBrush.Visual>
                                <Line X1="0" Y1="10" X2="10" Y2="20" Stroke="Gray" StrokeThickness="1"/>
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Border.Background>
                </Border>
                <TextBlock Grid.Column="1" Text="其实也没啥事哈哈" Foreground="White"/>
            </Grid>
        </Border>
    </Grid>
</Window>
